<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payment</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">
                  Form tambah pembayaran
                </h3>
              </div>
              <!-- /.card-header -->
              <form action="/payment/create" method="POST">
                <div class="card-body">
                  <div class="form-group">
                    <label for="type">Tipe pembayaran</label>
                    <input type="text" class="form-control" name="type" id="type" placeholder="Tipe pembayaran..." required>
                  </div>
                  <div class="form-group">
                    <label>Nama bank</label>
                    <div class="select2-purple">
                      <select class="form-control select2" multiple="multiple" data-placeholder="Pilih bank" style="width: 100%;" name="banks" required>
                        <% bank.forEach(b => { %>
                          <option value="<%= b._id %>">
                            <%= b.name %> | <%= b.nameBank %> <%= b.noRekening %> 
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
              </form>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>

